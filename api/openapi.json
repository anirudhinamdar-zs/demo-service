{
  "openapi": "3.0.3",
  "info": {
    "title": "employee-service",
    "version": "1.0.0",
    "description": "Employee and Department Management Service"
  },
  "servers": [
    {
      "url": "http://localhost:9002",
      "description": "Local"
    }
  ],
  "paths": {
    "/employees": {
      "get": {
        "summary": "List employees with optional filters",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": { "type": "integer" },
            "description": "Filter by employee ID"
          },
          {
            "name": "name",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filter by employee name"
          },
          {
            "name": "department",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
            },
            "description": "Filter by department code"
          }
        ],
        "responses": {
          "200": {
            "description": "Employees fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "employees": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Employee"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid filter parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create new employee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewEmployee"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Employee created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Employee"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Employee email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/employees/{id}": {
      "get": {
        "summary": "Fetch employee details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee details fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/NewEmployee"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Employee not found"
          }
        }
      },
      "put": {
        "summary": "Update employee details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewEmployee"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Employee updated successfully"
          },
          "409": {
            "description": "Email already exists or department does not exist"
          }
        }
      },
      "delete": {
        "summary": "Delete employee",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "204": {
            "description": "Employee deleted"
          },
          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
    "/departments": {
      "post": {
        "summary": "Create department (enum-based code)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Department"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Department created"
          },
          "409": {
            "description": "Department name already exists"
          }
        }
      }
    },
    "/departments/{code}": {
      "get": {
        "summary": "Fetch department details",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Department details fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Department"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Department not found"
          }
        }
      },
      "put": {
        "summary": "Update department details",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "floor": { "type": "integer" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Department updated"
          }
        }
      },
      "delete": {
        "summary": "Delete department",
        "description": "Deletion allowed only if no employees are mapped to this department",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Department deleted"
          },
          "409": {
            "description": "Department has employees mapped"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewEmployee": {
        "type": "object",
        "required": ["name", "email", "department"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phoneNumber": {
            "type": "string",
            "pattern": "^[0-9]{10}$"
          },
          "dob": {
            "type": "string",
            "format": "date"
          },
          "city": { "type": "string" },
          "department": {
            "type": "string",
            "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
          }
        }
      },
      "Employee": {
        "type": "object",
        "required": ["name", "email", "department"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phoneNumber": {
            "type": "string",
            "pattern": "^[0-9]{10}$"
          },
          "dob": {
            "type": "string",
            "format": "date"
          },
          "city": { "type": "string" },
          "department": {
            "type": "string",
            "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
          }
        }
      },
      "Department": {
        "type": "object",
        "required": ["code", "name", "floor"],
        "properties": {
          "code": {
            "type": "string",
            "enum": ["CSE", "IT", "ECE", "EEE", "ME"]
          },
          "name": {
            "type": "string",
            "description": "Must be unique across departments"
          },
          "floor": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "code": { "type": "string" },
                "reason": { "type": "string" },
                "datetime": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    }
  }
}